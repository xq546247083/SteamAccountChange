<UserControl x:Class="SteamHub.View.TrayPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convert="clr-namespace:SteamHub.Convert"
             mc:Ignorable="d">

    <UserControl.Resources>
        <convert:ByteToImageSourceConverter x:Key="ByteToImageSourceConverter" />
    </UserControl.Resources>

    <Border CornerRadius="8"
            Background="#FFFFFF"
            Width="280"
            Height="Auto">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                              ShadowDepth="0"
                              Opacity="0.3"
                              Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="10,10,10,5">
                <TextBlock Text="SteamHub"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center" />
                <Button Command="{Binding OpenMainWindowCommand}"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        HorizontalAlignment="Right"
                        ToolTip="打开主界面">
                    <materialDesign:PackIcon Kind="ViewDashboard" />
                </Button>
            </Grid>

            <Separator Grid.Row="0"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,-5" />

            <!-- Account List -->
            <ScrollViewer Grid.Row="1"
                          MaxHeight="300"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SteamAccounts}"
                              Margin="0,5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding DataContext.SwitchSteamAccountCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    HorizontalContentAlignment="Left"
                                    Height="50"
                                    Padding="10,0">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0"
                                             Width="32"
                                             Height="32">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Icon, Converter={StaticResource ByteToImageSourceConverter}}"
                                                        Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <StackPanel Grid.Column="1"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding Account}"
                                                   FontSize="12"
                                                   Opacity="0.7"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Separator Grid.Row="1"
                       VerticalAlignment="Bottom" />

            <!-- Footer -->
            <StackPanel Grid.Row="2"
                        Margin="0,5">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding LoginSteamAccountCommand}"
                        HorizontalContentAlignment="Left"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock Text="登录新账号" />
                    </StackPanel>
                </Button>

                <Grid Margin="15,5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="RocketLaunch"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock Text="开机自启动"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <ToggleButton IsChecked="{Binding IsLaunchOnSysPowerOn}"
                                  Command="{Binding ToggleAutoStartCommand}"
                                  HorizontalAlignment="Right"
                                  Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                </Grid>

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding ExitCommand}"
                        HorizontalContentAlignment="Left"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ExitToApp"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock Text="退出" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
