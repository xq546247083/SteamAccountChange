<UserControl x:Class="SteamHub.View.TrayPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convert="clr-namespace:SteamHub.Convert"
             mc:Ignorable="d">

    <UserControl.Resources>
        <convert:ByteToImageSourceConverter x:Key="ByteToImageSourceConverter" />
    </UserControl.Resources>

    <Border CornerRadius="8"
            Background="#FFFFFF"
            Width="240"
            Height="Auto">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                              ShadowDepth="0"
                              Opacity="0.3"
                              Color="White" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="10,5,10,5">
                <TextBlock Text="Steam账号切换器"
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Width="30"
                            Height="30"
                            Command="{Binding ToggleShowTypeCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}">
                        <materialDesign:PackIcon>
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind"
                                            Value="AccountMultiple" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowType}"
                                                     Value="SteamGame">
                                            <Setter Property="Kind"
                                                    Value="Controller" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Width="30"
                            Height="30"
                            Command="{Binding OpenMainWindowCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="打开主界面">
                        <materialDesign:PackIcon Kind="ViewDashboard" />
                    </Button>
                </StackPanel>
            </Grid>
            <Separator Grid.Row="0"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,-5" />

            <!-- Account/Game List Container -->
            <Grid Grid.Row="1">
                <!-- Account List -->
                <ScrollViewer Height="200"
                              VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowType}"
                                             Value="SteamGame">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <ItemsControl ItemsSource="{Binding SteamAccounts}"
                                  Margin="0,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        Command="{Binding DataContext.SwitchSteamAccountCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalContentAlignment="Left"
                                        Height="50"
                                        Padding="10,0">
                                    <Grid Width="240">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"
                                              Width="32"
                                              Height="32">
                                            <materialDesign:PackIcon Kind="QuestionMark"
                                                                     Width="32"
                                                                     Height="32"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Opacity="0.5" />
                                            <Image Source="{Binding Icon, Converter={StaticResource ByteToImageSourceConverter}}"
                                                   Stretch="UniformToFill" />
                                        </Grid>
                                        <StackPanel Grid.Column="1"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding Account}"
                                                       FontSize="12"
                                                       Opacity="0.7"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Game List -->
                <ScrollViewer Height="200"
                              VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowType}"
                                             Value="SteamGame">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <ItemsControl ItemsSource="{Binding SteamGames}"
                                  Margin="0,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        Command="{Binding DataContext.OpenSteamGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalContentAlignment="Left"
                                        Height="50"
                                        Padding="10,0">
                                    <Grid Width="240">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"
                                              Width="32"
                                              Height="32">
                                            <materialDesign:PackIcon Kind="Controller"
                                                                     Width="32"
                                                                     Height="32"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Opacity="0.5" />
                                            <Image Source="{Binding Icon, Converter={StaticResource ByteToImageSourceConverter}}"
                                                   Stretch="UniformToFill" />
                                        </Grid>
                                        <StackPanel Grid.Column="1"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State - Accounts -->
                <TextBlock Text="暂无账号数据"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SteamAccounts.Count}"
                                                   Value="0" />
                                        <Condition Binding="{Binding ShowType}"
                                                   Value="SteamAccount" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Empty State - Games -->
                <TextBlock Text="暂无游戏数据"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SteamGames.Count}"
                                                   Value="0" />
                                        <Condition Binding="{Binding ShowType}"
                                                   Value="SteamGame" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Separator Grid.Row="1"
                       VerticalAlignment="Bottom" />
            <!-- Footer -->
            <StackPanel Grid.Row="2"
                        Margin="10">
                <Grid Margin="15,5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="RocketLaunch"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock FontSize="13"
                                   Text="开机自启动"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <ToggleButton  IsChecked="{Binding IsLaunchOnSysPowerOn}"
                                   Command="{Binding ToggleAutoStartCommand}"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                </Grid>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding LoginSteamAccountCommand}"
                        HorizontalContentAlignment="Left"
                        MinHeight="40"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock Text="登录新账号" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding ExitCommand}"
                        HorizontalContentAlignment="Left"
                        MinHeight="40"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ExitToApp"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0" />
                        <TextBlock Text="退出" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
